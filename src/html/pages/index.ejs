<!DOCTYPE html>
<html lang="en">
<head>
<script src="//cdn.optimizely.com/js/2520710496.js"></script>
<title>Hylo</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta charset="UTF-8">

<%- include('_newrelic') %>
<%- include('_clientEnv') %>
<%- include('_segment') %>
<%- include('_favicon') %>

<script type="text/javascript">
window.analytics.page(); // segment.io
</script>
