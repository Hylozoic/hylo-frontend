<div class="main-content">
  <div class="all-sections">

    <div class="center">
      <h3>Welcome to {{onboarding.community.name}}</h3>
      <div class="logo" back-img="::onboarding.community.avatar_url"></div>
      <div class="logo" back-img="'<%= imageUrl('logotype-teal-transparent.png') %>'"></div>
    </div>

    <div class="center">
      <h4>Discover the people, skills, and resources all around you with Hylo. Together, we can create anything we can imagine.</h4>
    </div>

    <div class="leader-message" ng-if="onboarding.community.welcome_message">
      <p>Thank you for joining {{onboarding.community.name}} on Hylo.</p>
      <div class="leader">
        <div class="avatar" back-img="::onboarding.community.leader.avatar_url"></div>
        <div class="name">{{onboarding.community.leader.name}}</div>
      </div>
      <p ng-bind-html="('“' + onboarding.community.welcome_message + '”') | markdown"></p>
    </div>

    <div class="center">
      <a class="button" ng-click="onboarding.goNext()">Continue</a>
    </div>

  </div>
</div>
